---
import { frontmatter as home, Content } from '~/home.md'
import Layout from '~/components/layout.astro'
import { obfuscate } from '~/utils/obfuscate'
import { sortDates } from '~/utils/sort-dates'

const formatDate = (dateString: string) => {
  const date = new Date(dateString)

  if (date.getTime() - Date.now() > 0) {
    return 'Present'
  }

  return date.getFullYear()
}

const timeline = await Astro.glob('../timeline/*.md')
// sort timeline with most recent first
const sortedTimeline = timeline.sort((a, b) => {
  return sortDates(b.frontmatter.startDate, a.frontmatter.startDate)
})
---

<Layout>
  <main class="max-w-prose">
    <h1>{home.title}</h1>

    <div class="mt-3 prose dark:prose-invert">
      <Content />

      <h3>Experience</h3>

      <ul class="mt-6 space-y-3 dark:text-gray-200">
        {sortedTimeline.map(
          ({
            frontmatter: { endDate, startDate, role, company, link, linkTitle },
          }) => (
            <li>
              <div class="flex flex-col items-start">
                {endDate ? (
                  <span>
                    {formatDate(startDate)} &mdash; {formatDate(endDate)}
                  </span>
                ) : (
                  <span>{formatDate(startDate)} to date</span>
                )}
                <span>
                  {role} @ {company}
                </span>
                {link ? (
                  <a
                    href={link}
                    rel="noopener noreferrer"
                    target="_blank"
                    title={linkTitle}
                  >
                    visit them {'/^'}
                  </a>
                ) : (
                  <span>404 website not found</span>
                )}
              </div>
            </li>
          )
        )}
      </ul>
    </div>
  </main>

  <footer
    class="mt-6 inline-block"
    set:html={obfuscate(home.email)}
    tabindex={0}
  >
  </footer>
</Layout>
