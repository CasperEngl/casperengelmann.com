---
import OutboundLink from '~/components/ui/outbound-link.astro'
import { obfuscate } from '~/utils/obfuscate'
---

<footer class="max-w-4xl mx-auto px-6 py-16 border-t border-black/10 dark:border-white/10">
  <div class="flex flex-wrap gap-x-16 gap-y-8">
    <div class="flex flex-col gap-2">
      <h2 class="text-lg font-semibold">Contact</h2>
      <p class="text-gray-600 dark:text-gray-400" set:html={obfuscate('me@casperengelmann.com')} />
    </div>

    <div class="flex flex-col gap-2">
      <h2 class="text-lg font-semibold">Links</h2>
      <div class="flex flex-col gap-1 text-gray-600 dark:text-gray-400">
        <OutboundLink href="https://github.com/casperengl/">
          github.com/casperengl/
        </OutboundLink>
        <OutboundLink href="https://www.linkedin.com/in/casperengl/">
          linkedin.com/in/casperengl/
        </OutboundLink>
        <OutboundLink href="https://twitter.com/casperengl">
          twitter.com/casperengl
        </OutboundLink>
      </div>
    </div>
  </div>

  <p class="mt-8 text-sm text-gray-500 dark:text-gray-500">
    &copy; {new Date().getFullYear()} Casper Engelmann
  </p>
</footer>
