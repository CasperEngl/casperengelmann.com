---
import Footer from './footer.astro'

interface Props {
  title?: string
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{Astro.props.title || 'Casper Engelmann'}</title>

    <meta
      name="description"
      content="I'm a developer living in Denmark. I enjoy watching films, series, competitive gaming, and feeding my curious mind."
    />
    <meta name="author" content="Casper Engelmann" />
    <meta
      name="keywords"
      content="web developer, frontend developer, Denmark, web development, React, JavaScript"
    />
    <link rel="canonical" href={Astro.url.href} />

    <style>
      @view-transition {
        navigation: auto;
      }
    </style>

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Person",
        "name": "Casper Engelmann",
        "jobTitle": "Web Developer",
        "url": "https://casperengelmann.com",
        "sameAs": [
          "https://github.com/casperengl/",
          "https://www.linkedin.com/in/casperengl/",
          "https://twitter.com/casperengl"
        ]
      }
    </script>
  </head>
  <body class="bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 min-h-screen p-6 md:p-8 font-mono text-sm">
    <main class="max-w-2xl mx-auto">
      <slot />
    </main>

    <Footer />
  </body>
</html>
