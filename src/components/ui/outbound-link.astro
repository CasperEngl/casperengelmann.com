---
import LinkOut from '~/icons/link-out.astro'
import { cn } from '~/utils/cn'

interface Props {
  href: string
  class?: string
}

const { href, class: className, ...rest } = Astro.props
---

<a
  href={href}
  class={cn('text-blue-600 dark:text-blue-400 hover:underline', className)}
  target="_blank"
  rel="noopener noreferrer"
  {...rest}
><slot />&nbsp;<LinkOut class="inline-block size-[0.75em] -mt-0.5" /></a>
