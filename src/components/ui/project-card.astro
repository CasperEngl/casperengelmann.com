---
import OutboundLink from './outbound-link.astro'

interface Props {
  title: string
  description: string
  link: string
}

const { title, description, link } = Astro.props
---

<div
  class="p-6 rounded-lg bg-black/5 dark:bg-white/5 border border-black/10 dark:border-white/10 hover:border-black/20 dark:hover:border-white/20 transition"
>
  <h3 class="text-lg font-semibold mb-2">
    <OutboundLink href={link} class="hover:underline">
      {title}
    </OutboundLink>
  </h3>
  <p class="text-gray-600 dark:text-gray-400">{description}</p>
</div>
