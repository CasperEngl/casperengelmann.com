---
import Section from '~/components/layout/section.astro'
import ProjectCard from '~/components/ui/project-card.astro'

const projects = [
  {
    title: 'Pendlertjek',
    description: 'Compare commuter tax deduction options in Denmark',
    link: 'https://pendlertjek.vercel.app/',
  },
]
---

<Section id="projects">
  <h2 class="text-2xl md:text-3xl font-bold mb-8">Projects</h2>

  <div class="grid sm:grid-cols-2 gap-4">
    {projects.map((project) => <ProjectCard {...project} />)}
  </div>
</Section>
