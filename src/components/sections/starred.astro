---
import Section from '~/components/layout/section.astro'
import GithubStarred from '~/components/ui/github-starred.astro'
import Skeleton from '~/components/ui/skeleton.astro'
---

<Section id="starred">
  <h2 class="text-2xl md:text-3xl font-bold mb-8">Currently Exploring</h2>

  <p class="text-gray-600 dark:text-gray-400 mb-6">
    Some of my latest starred repositories on GitHub.
  </p>

  <GithubStarred server:defer>
    <ul slot="fallback" class="space-y-2">
      {
        Array.from({ length: 10 }).map(() => (
          <li>
            <Skeleton class="block w-full h-7 rounded" />
          </li>
        ))
      }
    </ul>
  </GithubStarred>
</Section>
