---
import Section from '~/components/layout/section.astro'
import GithubIcon from '~/icons/github.astro'
import LinkedinIcon from '~/icons/linkedin.astro'
import TwitterIcon from '~/icons/twitter.astro'
import { obfuscate } from '~/utils/obfuscate'
---

<Section id="contact">
  <h2 class="text-2xl md:text-3xl font-bold mb-8">Get in Touch</h2>

  <p class="text-gray-600 dark:text-gray-400 mb-4">
    Feel free to reach out if you'd like to work together or just say hello.
  </p>

  <p class="text-lg mb-8">
    <span class="font-medium" set:html={obfuscate('me@casperengelmann.com')} />
  </p>

  <div class="flex gap-4">
    <a
      href="https://github.com/casperengl/"
      target="_blank"
      rel="noopener noreferrer"
      class="p-3 rounded-lg bg-black/5 dark:bg-white/10 hover:bg-black/10 dark:hover:bg-white/20 transition"
      aria-label="GitHub"
    >
      <GithubIcon class="w-6 h-6" />
    </a>
    <a
      href="https://www.linkedin.com/in/casperengl/"
      target="_blank"
      rel="noopener noreferrer"
      class="p-3 rounded-lg bg-black/5 dark:bg-white/10 hover:bg-black/10 dark:hover:bg-white/20 transition"
      aria-label="LinkedIn"
    >
      <LinkedinIcon class="w-6 h-6" />
    </a>
    <a
      href="https://twitter.com/casperengl"
      target="_blank"
      rel="noopener noreferrer"
      class="p-3 rounded-lg bg-black/5 dark:bg-white/10 hover:bg-black/10 dark:hover:bg-white/20 transition"
      aria-label="Twitter"
    >
      <TwitterIcon class="w-6 h-6" />
    </a>
  </div>
</Section>
